{
  "plugins": ["prettier", "@typescript-eslint", "testing-library", "jest-dom"],
  "extends": [
    "airbnb-typescript",
    "react-app",
    "prettier",
    "plugin:testing-library/react",
    "plugin:jest-dom/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "settings": {
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true
      }
    }
  },
  "rules": {
    "max-len": [
      "warn",
      {
        "code": 100
      }
    ],
    "no-plusplus": [
      "error",
      {
        "allowForLoopAfterthoughts": true
      }
    ],
    "react/jsx-props-no-spreading": [
      "error",
      {
        "html": "ignore"
      }
    ]
  }
}
